// tsconfig.json (main configuration)
{
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}